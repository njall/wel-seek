<%
	users = User.all.collect{|u| [u.person.name, u.id] unless u.person.nil?}.compact
	users = users.sort{|a,b| a[0] <=> b[0]}
-%>
<% form_tag impersonate_users_url do %>
  <%= select_tag "id", options_for_select(users) -%>
  <%= submit_tag "Go", :confirm => "This action will log you out. Are you sure you wish to continue?" %>
<% end %>