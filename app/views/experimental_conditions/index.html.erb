<%= javascript_include_tag 'studied_factor.js' -%>

<h1>
  <%= "Experimental conditions for '#{link_to h(@protocol.title),protocol_path(@protocol, :version => @display_protocol.version)}' version #{@display_protocol.version}" %>
</h1>

<center>
  <div id="add_condition_or_factor" style="display:block;">
    <%= render :partial=>"studied_factors/add_condition_or_factor", :locals => {:asset => 'protocol'} %>
  </div>

  <ul id="conditions_or_factors" class="conditions_or_factors">

    <%= render :partial=>"studied_factors/condition_or_factor_row_headings", :locals=>{:asset => 'protocol', :show_delete=>true} %>

    <div id="condition_or_factor_rows">
      <%= render :partial=>"studied_factors/condition_or_factor_row",:collection=>@display_protocol.experimental_conditions, :locals=>{:asset => 'protocol', :show_delete=>true} %>
    </div>
  </ul>

</center>

