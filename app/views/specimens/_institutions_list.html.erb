<% institution_value= (@specimen && @specimen.institution) ? @specimen.institution.id : 0 %>
<% institutions_options = [["No Institution",0]]|ins.collect{|i| [h(i.name),i.id]} %>


<%= select_tag :institution_id,
  options_for_select(institutions_options,institution_value),
  {
    :style=>"width:82%",:disabled=>(ins.nil? || ins.empty?),
    :name=>"specimen[institution_id]"
  }
-%>